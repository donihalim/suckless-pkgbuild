# Maintainer: DONIX <donihalim@protonmail.com>

pkgname=dwm
pkgver=6.3
pkgrel=1
pkgdesc="A dynamic window manager for X"
url="https://dwm.suckless.org"
arch=('x86_64')
license=('MIT')
options=(zipman)
depends=('libx11' 'libxinerama' 'libxft' 'alacritty')
optdepends=(
    'dmenu: A dynamic menu for X'
    'libxft-bgra: Emoji support (AUR)'
    'terminus-font-ttf: Default font used in this build (AUR)'
    'slock: Simple X display locker'
    'pulsemixer: CLI and curses mixer for pulseasudio' 
)

source=(
    https://dl.suckless.org/dwm/dwm-${pkgver}.tar.gz
    dwm-borderfix-6.3.diff
    dwm-smartborders-6.3.diff
    config.h
)

sha256sums=(
    'badaa028529b1fba1fd7f9a84f3b64f31190466c858011b53e2f7b70c6a3078d'
    'SKIP'
    'SKIP'
    'SKIP'
)

prepare() {
    cd "${srcdir}/${pkgname}-${pkgver}"
    cp "${srcdir}/config.h" config.h
    cp "${srcdir}/dwm-borderfix-6.3.diff" dwm-borderfix-6.3.diff
    cp "${srcdir}/dwm-smartborders-6.3.diff" dwm-smartborders-6.3.diff
    echo "Applying borderfix patch..."
    patch -p1 < dwm-borderfix-6.3.diff
    echo "Applying smartborder patch..."
    patch -p1 < dwm-smartborders-6.3.diff
}

build() {
    cd "${srcdir}/${pkgname}-${pkgver}"
    make
}

package() {
    cd "${srcdir}/${pkgname}-${pkgver}"
    make PREFIX=/usr DESTDIR="${pkgdir}" install
    install -Dm644 LICENSE "${pkgdir}/usr/share/licenses/${pkgname}/LICENSE"
}

